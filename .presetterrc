{
  "preset": "presetter-preset",
  "config": {
    "directory": {
      "source": "src",
      "output": "public"
    },
    "gitignore": [".cache", "types/@*", "webpack-*-report.html"],
    "eslint": {
      "extends": [
        "plugin:react/recommended"
      ],
      "rules": {
        "@typescript-eslint/naming-convention": [
          "error",
          {
            "selector": "variable",
            "types": [
              "function"
            ],
            "format": [
              "camelCase",
              "PascalCase"
            ]
          }
        ]
      }
    },
    "tsconfig": {
      "include": [
        "**/*.tsx"
      ],
      "compilerOptions": {
        "jsx": "react",
        "lib": [
          "DOM"
        ]
      }
    }
  }
}
